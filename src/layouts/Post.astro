---
import Layout from './Base.astro';
import Container from "../components/Container.astro";
import ArticleSchema from '../components/ArticleSchema.astro';
import Navbar from "../components/Navbar.astro";
import Footercard from "../components/FooterCard.astro";

const { frontmatter } = Astro.props;


---

<!-- post itself not the index page -->

<Layout seo={frontmatter}>
  <Fragment slot="head-bottom">
  <ArticleSchema {...frontmatter}  />
 </Fragment>
  <Container>
    <Navbar />
    <article class="post-content__article flex justify-center">
      <div class="card rounded-box overflow-hidden bg-base-100 shadow-xl">

        <!-- frontmatter image -->
      {frontmatter.image && <img width="100%" height="420" class="post-main__img rounded-box w-full" loading="lazy" src={frontmatter.image} alt={frontmatter.alt} />}

      <div class="p-6 md:p-20">
      <!-- frontmatter title -->
       <div class="text-xl font-bold">
        <h1>{frontmatter.title}</h1>
       </div>
       
       <h2 class="text-pink-400"></h2>

       <!-- front matter publishing date -->
      <time>{frontmatter.publishDate}</time>
      

      <!-- // Rendering markdown pages starts here at  <slot /> see: https://docs.astro.build/en/basics/layouts/#markdownmdx-layouts -->
      <div class="divider divider-neutral"></div>
        <slot />
      </div>
      </div>
    </article>
    <Footercard />
  </Container>
</Layout>


