---
import Layout from './Base.astro';
import Container from "../components/Container.astro";
import ArticleSchema from '../components/ArticleSchema.astro';
import Navbar from "../components/Navbar.astro";

const { frontmatter } = Astro.props;


---

<!-- post itself not the index page -->

<Layout seo={frontmatter}>
  <Fragment slot="head-bottom">
  <ArticleSchema {...frontmatter}  />
 </Fragment>
  <Container>
    <Navbar />
    <article class="post-content__article">
      <div class="card bg-base-100 rounded-box overflow-hidden w-auto shadow-xl border-2">
        <!-- frontmatter image -->
      {frontmatter.image && <img width="100%" height="420" class="post-main__img rounded-box" loading="lazy" src={frontmatter.image} alt={frontmatter.alt} />}

      <!-- frontmatter title -->
      <h1>{frontmatter.title}</h1>

      <!-- front matter publishing date -->
      <time>{frontmatter.publishDate}</time>

      <!-- // Rendering markdown pages starts here at  <slot /> see: https://docs.astro.build/en/basics/layouts/#markdownmdx-layouts -->
       <div class="">
        <slot />
      </div>
      </div>
    </article>
  </Container>
</Layout>


<style>
  article {
    > * {
      margin-block: 0 0;
      margin-inline: 0;
      p {
      font-weight: 400;
    }

    h2 {
      margin-block: 3em 0;
      padding-block-end: 0.2em;
      border-inline-start: 4px solid var(--color-accent);
      padding-inline-start: var(--sp-s);
      line-height: 1.4;
      font-size: 1.6rem;
    } 
    }
  }
  </style>