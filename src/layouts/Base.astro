---
import BaseHead from "../components/BaseHead.astro";
import type { Props as BaseHeadProps } from "../components/BaseHead.astro";
import { GoogleAnalytics } from 'astro-google-analytics';

export interface Props {
  seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {...seo} />
    <slot name="head-bottom" />
    <GoogleAnalytics id="G-MB2SGCT5SG" />
  </head>
  <body
    class="bg-gradient-to-r from-purple-500 via-blue-500 to-pink-500 dark:bg-gradient-to-r dark:from-purple-900 dark:via-gray-900 dark:to-pink-800"
  >
    <slot name="header" />
    <main>
      <slot />
    </main>
    <slot name="footer" />
  </body>
</html>
