---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<!-- Code -->
<article
  class="post-preview shadow-xl scale-90 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-100 duration-300 "
>
  <div
    class="card w-auto shadow-xl text-white bg-pink-500 transition-colors hover:bg-purple-800 hover:duration-3000
    
    dark:bg-purple-800 dark:transition-colors dark:hover:bg-pink-600 dark:hover:duration-3000"
  >
    <div class="card-body">
      <h2 class="card-title hover:text-lime-400">
        <a href={post.url}>{post.title}</a>
      </h2>
      <p>{post.description}</p>
      <time class="publish-date">{post.publishDate}</time>
    </div>
    <figure>
      <img src={post.image} alt={post.alt} />
    </figure>
  </div>
</article>

